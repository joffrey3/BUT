    int tab[8][8], alea_x, alea_y, pos_x, pos_y,flag=1;
    for (i=0;i<x;i++){
        for (j=0;j<y;j++){
            tab[i][j]=-1;
        }
    }
    for (i=0;i<(x*y);i++){
        alea_x=rand()%x;
        alea_y=rand()%y;
        if (i==0){
            pos_x=alea_x;
            pos_y=alea_y;
        }
        if(tab[alea_x][alea_y]!=-1){
            i=i-1;
        }else {
            tab[alea_x][alea_y]=i;
        }
    }
        /*flag=verification(pos_x,pos_y,x,y,tab);*/
    taquin_chiffre(x,y,tab);
